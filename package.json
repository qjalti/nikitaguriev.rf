{
  "name": "nikitaguriev.rf",
  "version": "1.0.0",
  "description": "Личный сайт Никиты Гуриева",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "server": "nodemon index.js",
    "client": "npm run start --prefix react-ng",
    "client:install": "npm install --prefix react-ng",
    "client:build": "npm run build --prefix react-ng",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\"",
    "iall": "npm install && npm run client:install",
    "epf": "npx prettier . --write & npx eslint . --fix"
  },
  "author": "Nikita Guriev <stig.guriev@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.19.1",
    "canvas": "^3.1.2",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.2",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^4.1.0",
    "pg": "^8.11.0",
    "ramda": "^0.28.0",
    "socket.io": "^4.6.2",
    "telegraf": "^4.12.2"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "nodemon": "^2.0.15",
    "prettier": "3.8.0"
  }
}
